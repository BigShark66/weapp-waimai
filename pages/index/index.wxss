/**index.wxss**/
@import "../../component/shop/shop.wxss";
@import "../../component/category/category.wxss";
/*广告轮播*/
.banner{
  width: 100%;
  height: 150px;
}

.slide-image{
  width: 100%;
  height: 100%;
}

/*类目*/
.category{
  width: 100%;
  margin-top: 10px;
  padding-bottom: 10px;
  background-color: #fff;
}

/*周边在吃啥*/
.nearby{
  width: 100%;
  height: 35px;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  font-size: 13px;
  padding-right: 15px;
  padding-left: 15px;
  box-sizing: border-box;
  background-color: #fff;
  margin-bottom: 5px;
}

.nearby-title{
  float: left;
  line-height: 35px;
  font-size: 13px;
  color: #ee5511;
  box-sizing: border-box;
  margin-right: 15px;
}

.nearby-swiper{
  float: left;
  height: 100%;
  width: 70%;
}
.nearby-swiper-item{
  line-height: 35px;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
  position: relative;
}

.nearby-swiper-img{
  width: 22px;
  height: 22px;
  border-radius: 50%;
  margin-right: 5px;
  position: relative;
  top: 5px;
}

/*猜你喜欢*/
.recommend-list-title{
  padding: 0px 15px;
  border-bottom: 1px solid #eee;
  height: 35px;
  line-height: 35px;
}
.recommend-icon{
  width: 13px;
  height: 13px;
  margin-right: 5px;
}

.recommend-title{
  font-size: 13px;
}


